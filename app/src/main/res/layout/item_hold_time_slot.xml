<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/slot_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot 1"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/product_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Hot Dog"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/remaining_time_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/slot_number_text" />

        <TextView
            android:id="@+id/start_time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Started: 10:15 AM"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/remaining_time_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/product_name_text" />

        <TextView
            android:id="@+id/expiration_time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Expires: 2:15 PM"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/remaining_time_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/start_time_text" />

        <TextView
            android:id="@+id/remaining_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:45"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/remaining_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/remaining_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remaining"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/expiration_time_text"
            app:layout_constraintEnd_toEndOf="@id/remaining_time_text"
            app:layout_constraintStart_toStartOf="@id/remaining_time_text"
            app:layout_constraintTop_toBottomOf="@id/remaining_time_text" />

        <ProgressBar
            android:id="@+id/time_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="240"
            android:progress="180"
            android:progressTint="@android:color/holo_green_dark"
            app:layout_constraintTop_toBottomOf="@id/expiration_time_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/time_progress_bar">

            <Button
                android:id="@+id/discard_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:text="Discard"
                android:textColor="@android:color/holo_red_dark" />

            <Button
                android:id="@+id/reset_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:text="Reset Timer" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>